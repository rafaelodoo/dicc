<odoo>
<record id="product_template_form_inherit_uom_prices_pos_view" model="ir.ui.view">
    <field name="name">product.template.form.uom.prices.pos.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
	    <xpath expr="//page[@name='pos']/group" position="inside">
            <group name="multi_uom" string="UOM Price">
                <field name="multi_uom_price_ids" nolabel="1" colspan="2">
                            <list editable="bottom">
                                <field name="uom_id"/>
                                <field name="price"/>
                            </list>
                </field>
            </group>
        </xpath>
    </field>
</record>	
<record id="product_form_inherit_uom_prices_pos_view" model="ir.ui.view">
    <field name="name">product.form.uom.prices.pos.inherit</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
            <xpath expr="//page[@name='pos']/group" position="inside">
            <group name="multi_uom" string="UOM Price">
                <field name="multi_uom_price_ids" nolabel="1" colspan="2">
                            <list editable="bottom">
                                <field name="uom_id"/>
                                <field name="price"/>
                            </list>
                </field>
            </group>
        </xpath>
    </field>
</record>

</odoo>
