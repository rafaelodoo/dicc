<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit_pos_caja_cierre" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit.pos.caja.cierre</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='receipt_footer']" position="after">
                    <div class="o_settings_box" string="Cierre de Caja">
                        <div class="o_row">
                            <field name="hide_cash_details_on_closing"/>
                            <label for="hide_cash_details_on_closing" string="Ocultar detalles de efectivo al cerrar"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 