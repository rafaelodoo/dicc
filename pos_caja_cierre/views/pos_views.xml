<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_inherit_pos_caja_cierre" model="ir.ui.view">
            <field name="name">pos.config.view.form.inherit.pos.caja.cierre</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Cierre de Caja" name="cash_closure">
                        <group>
                            <field name="hide_cash_details_on_closing"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 