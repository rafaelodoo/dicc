<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos.caja.cierre</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_pricing_section']" position="after">
                <block title="Cierre de Caja" id="pos_caja_cierre_section">
                    <setting string="Ocultar detalles de efectivo" help="Si está marcado, se ocultarán los detalles de efectivo al cerrar la caja">
                        <field name="hide_cash_details_on_closing"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo> 