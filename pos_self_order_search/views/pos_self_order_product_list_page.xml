<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="pos_self_order_search.ProductListPage" t-inherit="pos_self_order.ProductListPage" t-inherit-mode="extension" owl="1">

        <xpath expr="//div[hasclass('product-list-page')]/div[hasclass('d-flex')]" position="before">
            <div class="pos-search-bar m-3 input-group">
                 <span class="input-group-text bg-white border-end-0" id="basic-addon1">
                    <i class="fa fa-search"/>
                 </span>
                <input type="text"
                       class="form-control border-start-0"
                       placeholder="Buscar productos..."
                       t-on-input="onSearchInput"
                       aria-label="Buscar productos"
                       aria-describedby="basic-addon1"/>
            </div>
        </xpath>

    </t>

</templates>